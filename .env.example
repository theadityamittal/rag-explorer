# App identity
APP_NAME="Support Deflection Bot"
APP_VERSION="0.1.0"

# =============================================================================
# QUICK START: LOCAL SETUP (NO API KEYS REQUIRED)
# =============================================================================
# Default setup uses Ollama with llama3.1 model
# Install: curl -fsSL https://ollama.com/install.sh | sh && ollama pull llama3.1 && ollama pull nomic-embed-text
# No additional configuration needed for basic usage - just run: deflect-bot ask

# =============================================================================
# ADVANCED: API PROVIDERS (OPTIONAL)
# =============================================================================
# Add any of these for enhanced performance and reliability
# Choose one or more providers for cost-effective operation

# Primary Cost-Effective Providers
OPENAI_API_KEY="your_openai_api_key_here"              # GPT-4o-mini (~$0.15/1M tokens)
GROQ_API_KEY="your_groq_api_key_here"                  # Ultra-fast, free tier available

# Premium Providers  
ANTHROPIC_API_KEY="your_claude_api_key_here"           # Claude API (Haiku: $0.25/1M)
GOOGLE_API_KEY="your_google_api_key_here"              # Gemini (Flash: free tier)

# EU-Compliant Providers
MISTRAL_API_KEY="your_mistral_api_key_here"            # GDPR compliant, EU-based

# =============================================================================
# COST CONTROL & BUDGET MANAGEMENT  
# =============================================================================
# Set monthly budget and alert thresholds
MONTHLY_BUDGET_USD=10.0                                # Monthly budget limit
COST_ALERT_THRESHOLD=0.8                               # Alert at 80% of budget
ENABLE_COST_TRACKING=true                              # Enable real-time cost tracking

# =============================================================================
# PROVIDER STRATEGY & SELECTION
# =============================================================================  
# How to select and prioritize providers
DEFAULT_PROVIDER_STRATEGY=cost_optimized               # Options: cost_optimized, speed_focused, quality_first, balanced
REGIONAL_COMPLIANCE=true                               # Automatic GDPR filtering for EU users

# =============================================================================
# LOCAL PROVIDERS (OPTIONAL)
# =============================================================================
# For privacy-focused or offline usage - requires separate Ollama installation
# Only needed if you chose [all] installation option

OLLAMA_MODEL="llama3.1"                                # Local Ollama LLM model
OLLAMA_EMBED_MODEL="nomic-embed-text"                  # Local embedding model
# OLLAMA_HOST="http://host.docker.internal:11434"      # Custom Ollama host (Docker setup)

# Claude Code Path (for Claude Pro subscription users)
CLAUDE_CODE_PATH="claude"                              # Path to Claude Code executable

# =============================================================================
# ADVANCED: MODEL OVERRIDES
# =============================================================================
# Customize specific models for each provider (optional)
# Default models are already cost-optimized

# OPENAI_LLM_MODEL="gpt-4o-mini"                       # OpenAI chat model
# OPENAI_EMBEDDING_MODEL="text-embedding-3-small"     # OpenAI embedding model  
# CLAUDE_API_MODEL="claude-3-haiku-20240307"          # Claude API model (most cost-effective)
# GROQ_MODEL="llama-3.1-8b-instant"                   # Groq model (fastest)
# MISTRAL_MODEL="mistral-small-latest"                 # Mistral model
# GOOGLE_MODEL="gemini-1.5-flash"                     # Google model (free tier)

# =============================================================================
# VECTOR STORE & SEARCH
# =============================================================================
CHROMA_DB_PATH="./chroma_db"
CHROMA_COLLECTION="knowledge_base"

# =============================================================================
# RAG CONFIGURATION
# =============================================================================
ANSWER_MIN_CONF=0.25
MAX_CHUNKS=5
MAX_CHARS_PER_CHUNK=800

# =============================================================================
# WEB CRAWLING & INDEXING
# =============================================================================
CRAWL_USER_AGENT="SupportDeflectBot/0.1 (+https://example.local; contact: you@example.com)"
ALLOW_HOSTS="docs.python.org,packaging.python.org,pip.pypa.io,virtualenv.pypa.io"
TRUSTED_DOMAINS="docs.python.org,packaging.python.org,pip.pypa.io,virtualenv.pypa.io"
DEFAULT_SEEDS="https://docs.python.org/3/faq/index.html,https://docs.python.org/3/library/venv.html"
CRAWL_DEPTH=1
CRAWL_MAX_PAGES=40
CRAWL_SAME_DOMAIN=true

# =============================================================================
# FILE PATHS & STORAGE
# =============================================================================
# Optional overrides - sensible defaults provided
# CRAWL_CACHE_PATH="./data/crawl_cache.json"
# DOCS_FOLDER="./docs"