# Primary provider
PRIMARY_LLM_PROVIDER=ollama             # ollama, openai, anthropic, google
PRIMARY_EMBEDDING_PROVIDER=ollama       # ollama, openai, google

# Ollama settings (for local use)
OLLAMA_HOST=http://localhost:11434
OLLAMA_LLM_MODEL=llama3.1
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# API Keys (optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=

# OpenAI model default settings
OPENAI_LLM_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Anthropic model default settings
ANTHROPIC_LLM_MODEL=claude-3-7-sonnet-20250219

# Google model default settings
GEMINI_LLM_MODEL=gemini-2.5-flash
GEMINI_EMBEDDING_MODEL=gemini-embedding-001

# RAG settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=150
MIN_CONFIDENCE=0.25
MAX_CHUNKS=5

# Crawl Settings
CRAWL_SOURCES = ""
CRAWL_DEPTH = 2
CRAWL_MAX_PAGES = 50
CRAWL_SAME_DOMAIN = True

# Data directory
DOCS_FOLDER=./docs
CHROMA_DB_PATH=./chroma_db
